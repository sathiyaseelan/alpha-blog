<h1>Articles List</h1>
<table>
    <tr>
        <th>#</th>
        <th>Title</th>
        <th>Description</th>
        <th>Edit</th>
        
    </tr>
    <% count = 1 %>
<% @articles.each do |article| %>
 <tr>
     <td><%= count %></td>
     <td><%= link_to article.title, article_path(article) %></td>
     <td><%= article.description %></td>
     <td><%= link_to 'Edit', edit_article_path(article)%></td>
     <% count += 1 %>
 </tr>
<% end%>

</table>