

<h4 class="center">
    Title : <%= @article.title %>
</h4>

<div class="well col-xs-8 col-xs-offset-2">
    
    <%= simple_format @article.description %>
    <% if @article.categories.any?  %>
        <%= render @article.categories %></p>
    <% end %>
    <div class="article-actions">
        <% if logged_in? and (current_user == @article.user || current_user.admin?) %>
        <%= link_to "Edit Article", edit_article_path(@article) , class: "btn btn-xs btn-primary"%>
        <%= link_to "Delete Article", article_path(@article), method: 'delete', data: {confirm: "Are you sure wnat to Delete?" }, class: "btn btn-xs btn-danger" %>
        <% end %>
        <%= link_to "View Articles", articles_path, class: "btn btn-xs btn-success" %>
    </div>
    
</div>

