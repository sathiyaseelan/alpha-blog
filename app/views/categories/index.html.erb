<h1 align="center">List of Categories</h1>
<div align="center">
    <ul class="listing">
    <%= will_paginate %>
    <% @categories.each do |category| %>
        <div class="row">
            <div class="well col-md-4 col-md-offset-4">
                <li class="article-title"><%= link_to category.name, category_path(category)%></li>
            </div>
        </div>
    <% end %>
    </ul>
    <%= will_paginate %>
</div>