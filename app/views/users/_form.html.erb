
<div class="row">
    <div class='col-xs-12'>
        <%= form_for @user, :html => {class: "form-horizontal", role: "form"} do |f| %>

            <div class="form-group">
              <div class="control-label col-sm-2">
                <%= f.label "User Name" %>
              </div>
              <div class="col-sm-6">
                <%= f.text_field :username , class: "form-control", placeholder: "Enter your username", autofocus: true %>
              </div>
            </div>
            <div class="form-group">
              <div class="control-label col-sm-2">
                <%= f.label :first_name %>
              </div>
              <div class="col-sm-3">
                <%= f.text_field :first_name , class: "form-control", placeholder: "Enter your First Name" %>
              </div>
              <div class="control-label col-sm-1">
                <%= f.label :last_name , style: "float: left;" %>
              </div>
              <div class="col-sm-2">
                <%= f.text_field :last_name , class: "form-control", placeholder: "Enter your Last Name", style: "float: left;"%>
              </div>
            </div>

            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :email %>
                </div>
                <div class="col-sm-6">
                    <%= f.text_field :email , class: "form-control", placeholder: "Enter your email id" %>
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :password %>
                </div>
                <div class="col-sm-6">
                    <%= f.password_field :password , class: "form-control", placeholder: "Enter your password" %>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit(@user.new_record? ? "Sign up" : "Update Account", class: "btn btn-primary btn-lg")%>
                </div>
            </div>

        <% end %>
    </div>
</div>
